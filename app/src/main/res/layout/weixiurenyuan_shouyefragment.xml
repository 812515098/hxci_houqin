<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/index_bg">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"

       >
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="150dp"
           android:background="@drawable/banner_1"
           android:layout_weight="1"
          android:scaleType="fitXY"

           />

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/buju_shape2"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/tongzhi"
            android:drawableRight="@drawable/tj"
            android:text="信息发布"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/messagelv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/white" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@color/index_bg"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="接单时间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
           android:gravity="center"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:text="报修地点"
        android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:text="报修内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_gravity="center"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:text="状态"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
        <ListView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/weixiurenyuan_messagelv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="38"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>
