<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/denglu_logo"
        />

    <EditText
        android:id="@+id/Edit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/denglu_zh"
        android:drawablePadding="3dp"
        android:hint="手机号/学号/工号"
        android:singleLine="true"
        android:theme="@style/Editxcolor" />

    <EditText
        android:id="@+id/Edit_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/denglu_mm"
        android:drawableRight="@drawable/denglu_yc"
        android:drawablePadding="3dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:theme="@style/Editxcolor" />
        <RadioButton
            android:id="@+id/jizhumima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:checked="true"
            android:layout_marginLeft="220dp"
            android:textColor="#000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/denglu_bt"/>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:src="@drawable/denglu_bom"
    />
</LinearLayout>