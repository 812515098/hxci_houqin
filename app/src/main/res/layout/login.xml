<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">



    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/denglu_logo"
        />

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:src="@drawable/denglu_zh" />

<EditText
    android:id="@+id/Edit_user"
    android:layout_width="match_parent"
    android:background="@null"
    android:theme="@style/Editxcolor"
    android:hint="手机号/学号/工号"
    android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BCBCBC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Image_denglu"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/denglu_mm" />


        <EditText
            android:layout_toRightOf="@+id/Image_denglu"
            android:id="@+id/Edit_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginRight="0dp"
            android:background="@null"
            android:hint="密码"
            android:theme="@style/Editxcolor" />

        <ImageView
            android:id="@+id/Image_yincangmima"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/denglu_yj" />
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BCBCBC" />


    <CheckBox
        android:id="@+id/Check_jizhumima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:theme="@style/AppTheme"
        android:text="记住密码"
        android:textColor="#414141" />
    <Button
        android:id="@+id/Button_denglu"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/denglu_bt" />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:src="@drawable/denglu_bom"
    />
</LinearLayout>