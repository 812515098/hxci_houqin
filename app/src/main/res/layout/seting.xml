<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="#E7E7DF"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#E7E7DF"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/yonghuming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用 户 名"
            android:editable="false"
            android:background="@null"
            android:textColor="#C7C7B0"
            android:singleLine="true"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/yonghumingbianji"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C7C7B0"
            android:hint="填写用户名"
            android:singleLine="true"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
       >
        <EditText
            android:id="@+id/yuanshoujihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原手机号"
            android:editable="false"
            android:background="@null"
            android:textColor="#000"
            android:singleLine="true"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/yuanshoujihaobianji"
            android:background="@null"
            android:hint="填写原手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C7C7B0"
            android:singleLine="true"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/xinshoujihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手机号"
            android:editable="false"
            android:background="@null"
            android:textColor="#000"
            android:singleLine="true"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/xinshoujihaobianji"
            android:background="@null"
            android:hint="填写新手机号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C7C7B0"
            android:singleLine="true"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/zaiciquerenxinshoujihao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再次确认"
            android:editable="false"
            android:background="@null"
            android:textColor="#000"
            android:singleLine="true"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/zaiciquerenxinshoujihaobianji"
            android:background="@null"
            android:hint="再次填写确认"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C7C7B0"
            android:singleLine="true"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@color/colorAccent"/>

    <Button
        android:id="@+id/wancheng"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:text="完成"
        android:background="@drawable/button_selector"
        />
</LinearLayout>
</RelativeLayout>